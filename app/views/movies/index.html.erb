<div class="card-category m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1594908900066-3f47337549d8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80)">
    Our Movies
</div>

<div class="cards">
  <% @movies.each do |movie| %>
  <div class="card"  style="width: 30rem, height: 70rem">
    <img src="<%= movie.poster_url %>" class="card-img-top img-thumbnail" alt="...">
    <%# <div class="card-img-top img-thumbnail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>
      <%# <%= movie.title %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= movie.title %></h5>
      <p class="card-text"><%= movie.overview %></p>
    </div>
  </div>
  <% end %>
</div>


<div class="row">
  <% @movies.each do |movie| %>
  <div class="co-12 col-sm-6 col-md-4">
    <img src="<%= movie.poster_url %>" class="card-img-top img" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= movie.title %></h5>
      <p class="card-text"><%= movie.overview %></p>
    </div>
    <div class="card-footer">
      <small class="text-muted">Last updated 3 mins ago</small>
    </div>
  </div>
  <% end %>
</div>
